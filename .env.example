APP_NAME="Dental Hub"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Multi-tenancy Domain Configuration
# For local: dentalhub.test
# For production: yourdomain.com (no http/https, just domain)
APP_DOMAIN=dentalhub.test

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database Configuration
# For local: use sqlite
# For production: use mysql and uncomment below
DB_CONNECTION=sqlite
# DB_CONNECTION=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=your_database_name
# DB_USERNAME=your_database_user
# DB_PASSWORD=your_database_password

# Session Configuration
# For local: file driver, no domain restriction
# For production with subdomains: database driver, set domain with leading dot
SESSION_DRIVER=file
SESSION_LIFETIME=525600
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

# Production session settings (uncomment for production):
# SESSION_DRIVER=database
# SESSION_DOMAIN=.yourdomain.com
# SESSION_SECURE_COOKIE=true

FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@dentalhub.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"
